generator client {
    provider = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String  @id @default(cuid())
  name      String  @unique
  surname   String
  phone     String  @unique
  email     String  @unique
  password  String
  cat       String?
  ville     String?
  img       String?
  isAdmin   Boolean @default(false)
  desc      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produit {
  id               String            @id @default(cuid())
  name             String
  date             DateTime
  qa               Int?
  stock            Int?
  qr               Int?
  pa               Float?
  pv               Float?
  img              String?
  sa               Float?
  desc             String?                     
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  produitHistory   ProduitHistory[]
  ventes           Vente[] // Ajout de ce champ pour la relation avec Vente
}

model Vente {
  id            String   @id @default(cuid())
  name          String
  nomproduit    String
  qtevendu      Int
  nomclient     String
  prixvente     Int
  date          DateTime
  avance        Int
  reste         Int
  desc          String?
  produitId     String
  produit       Produit  @relation(fields: [produitId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  venteHistory  VenteHistory[]                         // Relation avec VenteHistory
 
}

model Client {
  id        String  @id @default(cuid())
  name      String  @unique
  surname   String  @unique
  phone     String
  ville     String?
  img       String?
  cat       String?
  desc      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProduitHistory {
  id         String   @id @default(cuid())
  produitId  String
  produit    Produit  @relation(fields: [produitId], references: [id])
  name       String
  stock      Int
  date       DateTime
  qa         Int
  qr         Int
  pa         Float
  pv         Float
  img        String?
  sa         Float
  desc       String
  modifiedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model VenteHistory {
  id         String   @id @default(cuid())
  venteId    String
  vente      Vente    @relation(fields: [venteId], references: [id])
  name       String
  date       DateTime
  qtevendu   Int
  prixvente  Float
  avance     Float
  reste      Float
  desc       String
  nomclient  String
  nomproduit String
  img        String?
  updatedAt  DateTime @default(now())
  createdAt  DateTime @default(now())
}
